             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShip2019"
             mc:Ignorable="d" 
             Background="DarkTurquoise">
    <Grid x:Name="gridBack"  Width="800" Height="500" VerticalAlignment="Top">
